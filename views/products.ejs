            <img src="menu.png" class="menu-icon" onclick="menutoggle()">
        </div>
        
    </div>
</div>

<div class="small-container">
  
    <div class="row row-2">
        <h2>All Products</h2>
    </div>
    <% for (let i = 0; i < items.length; i+=3) { %>
        <div class="row">
            <% for (let j = i; j < i + 3 && j < items.length; j++) { %>
                <div class="col-4">
                    <a href="/productdetails?code=<%= items[j].Code %>">
                        <img src="<%= items[j].Code %>.jpg"> <!-- Assuming 'Code' represents an image identifier -->
                        <h4><%= items[j].Description %></h4> <!-- Assuming 'ProductName' is a field in your items table -->
                        <div class="raiting">
                            <p>&#9733 &#9733 &#9733 &#9733 &#9734</p>
                        </div>
                        <p>$<%= items[j].Price %></p> <!-- Assuming 'Price' is a field in your items table -->
                    </a>
                </div>
            <% } %>
        </div>
    <% } %>
        </div>
    


